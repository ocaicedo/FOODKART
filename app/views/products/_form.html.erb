<%= form_for @product do |f| %>
  <p>
    <%= f.label :Producto %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :Descripción %><br>
    <%= f.text_area :description %>
  </p>
 
  <p>
    <%= f.label :Precio %><br>
    <%= f.text_field :price %>
  </p>
 
 <p>
    <%= f.label :Categoría %><br>
    <%= f.collection_select(:category_id, Category.all, :id, :name)  %><br>
  </p>
 
 <p>
    <%= f.label :Impuesto%><br>
    <%= f.text_field :tax %>
  </p>

  <p>
    <%= f.submit 'Guardar' %>
  </p>
<% end %>