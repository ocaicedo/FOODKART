<h1>Categorías</h1>
 
<table class="table table-bordered" >
  <tr>
    	<th>Nombre</th>
    	<th>Id</th>
      <th colspan="2"></th>
  <% @categories.each do |category|%>
	</tr>
 
<tr>
      <td><%= category.name%></td>
      <td><%= category.id %></td>
	  <td><%= link_to 'Editar', edit_category_path(category) %></td>
      <td><%= link_to 'Eliminar', category_path(category), method: :delete, data: { confirm: 'Desea eliminar DEFINITIVAMENTE esta categoría?' } %></td>
</tr>
<p></p>
<% end %>
</table>



<%= link_to 'Crear Nueva Categoría', new_category_path %>